generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model ChatSession {
  id        String    @id
  createdAt DateTime  @default(now())
  messages  Message[]
}

model Message {
  id        String      @id @default(cuid())
  sessionId String
  role      String
  content   String
  embedding Unsupported("vector(768)")?
  createdAt DateTime    @default(now())

  session   ChatSession @relation(fields: [sessionId], references: [id])
}
